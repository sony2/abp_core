<h4 class="pb-2">{{ 'Detalles del belén'|t }}</h4>
{% if ano_belen %}
  <div class="mb-3">
    <i class="bi bi-calendar-date"></i> {{ ano_belen }}
  </div>
{% endif %}
{% if localizacion_belen %}
  <div class="mb-3">
    <i class="bi bi-geo-alt-fill"></i> {{ localizacion_belen }}
  </div>
{% endif %}
{% if tamano_belen %}
  <div class="mb-3">
    <b>Tamaño:</b> {{ tamano_belen }}
  </div>
{% endif %}
{% if tipo_belen %}
  <div class="mb-3">
    <b>Tipo:</b> {{ tipo_belen }}
  </div>
{% endif %}
{% if escena %}
  <div class="mb-3">
    <b>Escena:</b> {{ escena }}
  </div>
{% endif %}
{% if artesanos_figuras %}
  <div class="mb-3">
    <b>Artesanos de las figuras:</b> {{ artesanos_figuras }}
  </div>
{% endif %}
{% if tamano_figuras_belen %}
  <div class="mb-3">
    <b>Tamaños de las figuras:</b> {{ tamano_figuras_belen }}
  </div>
{% endif %}
{% if galeria %}
  <div id="myModal" class="modal">
    <span class="close cursor" onclick="closeModal()">&times;</span>
    <div class="modal-content">
    {% for foto in galeria %}
      <div class="mySlides">
        <img src="{{ foto.imagen|e }}" style="width:100%">
      </div>
    {% endfor %}
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <div class="caption-container">
      <p id="caption"></p>
    </div>
  </div>

  <div class="pt-2">
    <a href="openModal();currentSlide(1)" class="btn btn-primary">{{ 'Ver Galería'|t }} <i class="bi bi-arrow-right"></i></a>
  </div>
  <script>
  function openModal() {
    document.getElementById("myModal").style.display = "block";
  }

  function closeModal() {
    document.getElementById("myModal").style.display = "none";
  }

  var slideIndex = 1;
  showSlides(slideIndex);

  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    var dots = document.getElementsByClassName("demo");
    var captionText = document.getElementById("caption");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
    }
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex-1].style.display = "block";
    dots[slideIndex-1].className += " active";
    captionText.innerHTML = dots[slideIndex-1].alt;
  }
  </script>  
{% endif %}
